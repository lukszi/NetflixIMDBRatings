{
  "name": "netflix_ratings",
  "version": "0.0.1",
  "description": "A Userscript that shows IMDB Ratings in Netflix",
  "main": "index.js",
  "repository": "https://github.com/lukszi/NetflixIMDBRatings",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-dev": "npx userscript-builder --mode dev",
    "build-bugfix": "npx userscript-builder --mode bugfix",
    "build-minor": "npx userscript-builder --mode minor",
    "build-major": "npx userscript-builder --mode major"
  },
  "author": "Lukas Sz",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "userscript-builder": "^0.1.1",
  },
  "userscript": {
    "entry": "./src/index.js",
    "dev": "./dist",
    "release": "./release",
    "fileName": "NetflixImdb",
    "meta": {
      "name": "Netflix IMDB ratings",
      "namespace": "http://tampermonkey.net/",
      "match": "https://www.netflix.com/*",
      "grant": [
        "unsafeWindow",
        "GM_getResourceText"
      ],
      "require": [
        "https://code.jquery.com/jquery-3.4.1.min.js",
        "https://cdnjs.cloudflare.com/ajax/libs/require.js/2.3.6/require.js"
      ]
    }
  },
  "dependencies": {
    "imdb-scrapper": "^2.3.0",
    "jquery": "^3.4.1",
    "name-to-imdb": "^2.3.2"
  }
}
